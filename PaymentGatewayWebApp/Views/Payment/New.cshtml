@model PaymentModel;
@{
    ViewData["Title"] = "New Payment Transaction Page";
}


<form method="post" asp-controller="payment" asp-action="new" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
     
    <input type="hidden" asp-for="TransactionId" />
    <div class="form-group">
        <label asp-for="Gateway" class="col-sm-2 col-form-label"></label>
        <select asp-for="Gateway" class="form-control" asp-items="(IEnumerable<SelectListItem>)ViewBag.Gateways"></select>
        <span asp-validation-for="Gateway" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Request.CardHolder" class="col-sm-2 col-form-label"></label>
        <input asp-for="Request.CardHolder" class="form-control">
        <span asp-validation-for="Request.CardHolder" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Request.CardNumber" class="col-sm-2 col-form-label"></label>
        <input asp-for="Request.CardNumber" class="form-control">
        <span asp-validation-for="Request.CardNumber" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="form-group col-md-3">
            <label asp-for="Request.ExpireMonth" class="col-sm-2 col-form-label"></label>
            <input asp-for="Request.ExpireMonth" class="form-control">
            <span asp-validation-for="Request.ExpireMonth" class="text-danger"></span>
        </div>
        <div class="form-group  col-md-3">
            <label asp-for="Request.ExpireYear" class="col-sm-2 col-form-label"></label>
            <input asp-for="Request.ExpireYear" class="form-control">
            <span asp-validation-for="Request.ExpireYear" class="text-danger"></span>
        </div>
    </div>      
    <div class="form-group col-md-3">
        <label asp-for="Request.Cvv" class="col-sm-2 col-form-label"></label>
        <input asp-for="Request.Cvv" class="form-control">
        <span asp-validation-for="Request.Cvv" class="text-danger"></span>
     </div>
    <div class="form-group">
        <label asp-for="Request.Amount" class="col-sm-2 col-form-label"></label>
        <input asp-for="Request.Amount" class="form-control">
        <span asp-validation-for="Request.Amount" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-sm-3 pt-2">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>